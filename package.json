{
  "name": "iobroker.gotify",
  "version": "0.4.0",
  "description": "Send push notifications to gotify",
  "author": {
    "name": "Thomas Pohl",
    "email": "post@thomaspohl.net"
  },
  "contributors": [
    {
      "name": "Thomas Pohl"
    }
  ],
  "homepage": "https://github.com/ThomasPohl/ioBroker.gotify",
  "license": "Apache-2.0",
  "keywords": [
    "gotify",
    "notification",
    "communication",
    "ioBroker"
  ],
  "engines": {
     "node": ">= 20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThomasPohl/ioBroker.gotify"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.2",
    "axios": "^1.7.8"
  },
  "devDependencies": {
    "@alcalzone/release-script": "~3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.0",
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^8.0.1",
    "@types/gulp": "^4.0.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.9.3",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mocha": "^10.7.0",
    "prettier": "^3.3.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "translate": "translate-adapter",
    "build": "build-adapter typescript",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts --exit",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/ThomasPohl/ioBroker.gotify/issues"
  },
  "readmeFilename": "README.md"
}
